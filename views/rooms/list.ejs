<style>
  .room-list-container {
    background: white;
    padding: 40px;
    border-radius: 16px;
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
    max-width: 1200px;
    margin: 40px auto;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: #333;
  }

  .room-list-container h2 {
    font-size: 2rem;
    color: #2c3e50;
    margin-bottom: 30px;
    text-align: center;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    font-size: 1rem;
  }

  thead tr {
    background-color: #3498db;
    color: white;
  }

  th, td {
    padding: 14px 20px;
    text-align: center;
    border-bottom: 1px solid #ddd;
  }

  tbody tr:hover {
    background-color: #f0f8ff;
  }

  @media (max-width: 768px) {
    .room-list-container {
      padding: 20px;
      margin: 20px;
    }
    
    table, thead, tbody, th, td, tr {
      display: block;
      width: 100%;
    }

    thead tr {
      display: none;
    }

    tbody tr {
      margin-bottom: 15px;
      border: 1px solid #ddd;
      border-radius: 10px;
      padding: 10px;
    }

    tbody td {
      text-align: right;
      padding-left: 50%;
      position: relative;
    }

    tbody td::before {
      content: attr(data-label);
      position: absolute;
      left: 15px;
      width: 45%;
      padding-left: 10px;
      font-weight: bold;
      text-align: left;
      color: #2c3e50;
    }
  }
</style>

<div class="room-list-container">
  <h2>üè® Room List</h2>
  <table>
    <thead>
      <tr>
        <th>Room No</th>
        <th>Capacity</th>
        <th>Occupancy</th>
        <th>Type</th>
      </tr>
    </thead>
    <tbody>
      <% rooms.forEach(room => { %>
      <tr>
        <td data-label="Room No"><%= room.room_no %></td>
        <td data-label="Capacity"><%= room.capacity %></td>
        <td data-label="Occupancy"><%= room.occupancy %></td>
        <td data-label="Type"><%= room.type %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
